<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backgroud"
    tools:context="com.example.a45556.btcontrol.MainActivity">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/ll_2"
        >
        <SeekBar
            android:id="@+id/sk_led1"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:max="70"
            android:progress="70"
            />
        <TextView
            android:id="@+id/tv_info_led1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="100%亮度"
            android:layout_gravity="end"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/ll_3">
        <SeekBar
            android:id="@+id/sk_led2"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:max="70"
            android:progress="70"
            />
        <TextView
            android:id="@+id/tv_info_led2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="100%亮度"
            android:layout_gravity="end"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <SeekBar
            android:id="@+id/sk_led3"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:max="70"
            android:progress="70"
            />
        <TextView
            android:id="@+id/tv_info_led3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="100%亮度"
            android:layout_gravity="end"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_3">
        <SeekBar
            android:id="@+id/sk_led4"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:max="70"
            android:progress="70"
            />
        <TextView
            android:id="@+id/tv_info_led4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="100%亮度"
            android:layout_gravity="end"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_4">
        <SeekBar
            android:id="@+id/sk_led5"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:max="70"
            android:progress="70"
            />
        <TextView
            android:id="@+id/tv_info_led5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="100%亮度"
            android:layout_gravity="end"
            />
    </LinearLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/settings"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/settings"/>

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="设置自定义编码"
        android:textColor="@color/alpha_black"
        android:textSize="16sp"
        />
</RelativeLayout>
